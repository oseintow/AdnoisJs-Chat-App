{% extends 'master' %}

{% block content %}
    <div class="">
        <h2>Welcome to the Chat App</h2>

        <div row>
            <div class="col-lg-12 text-center" style="margin-bottom: 20px">
                <form>
                    Enter Your name: <input type="text" id="username">
                    <button type="submit" id="enterName" class="btn btn-primary">Enter Name</button>
                    <button id="leave" class="btn btn-danger">Leave</button>
                </form>

            </div>
            <div class="col-sm-6 well"  id="private">
                <h4>Private Chat</h4>
                <h6>User select: <span id="userSelected" style="color: red"></span></h6>
                <div class="col-md-6">
                    <div style="min-width: 300px; min-height: 70px; border: solid red 1px">
                        <ul id="chatPersonMessages">
                        </ul>
                    </div>

                    <div style="clear:both">
                        <form>
                            <div class="form-control input-group">
                                <input type="text" name="chat" id="chatPersonMessage" class="input-lg">
                                <input type="submit" value="message" id="sendPersonMessage" class="btn btn-primary">
                            </div>
                        </form>
                    </div>
                </div>

                <div class="col-md-6">
                    <ul id="personList">
                    </ul>
                </div>
            </div>
            <div class="col-sm-6 well" id="room">
                <h4>Room Chat</h4>
                <div class="col-md-6">
                    <div>
                        <div style="min-width: 300px; min-height: 300px; border: solid red 1px">
                            <ul id="chatRoomnMessages">
                                <li></li>
                            </ul>
                        </div>

                        <div style="clear:both">
                            <form>
                                <div class="form-control input-group">
                                    <input type="text" name="chat" id="chatRoomnMessage" class="input-lg">
                                    <input type="submit" value="message" id="sendRoomnMessage" class="btn btn-primary">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div>
                        <ul id="roomList">
                            <li><a href="">Programming</a></li>
                            <li><a href="">Music</a></li>
                            <li><a href="">Football</a></li>
                            <li><a href="">Reading</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        var tom = 2323;
    </script>
{% endblock %}

{% block footer %}
    <script src="person.js"></script>
    <script src="room.js"></script>
{% endblock %}


